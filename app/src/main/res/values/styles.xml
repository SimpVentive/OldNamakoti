<resources>

    <!--base application theme-->
    <style name="AppMaterialTheme" parent="SuperMaterialTheme">
        <!-- Customise your theme here -->

    </style>

    <style name="SuperMaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Parent theme for all Pre-Lollipop and Lollipop above versions i.e. For all devices. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/red_color</item><!--edea0d-->
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
    </style>

    <!-- Base application theme. -->
