    <!--Toolbar theme-->
    <style name="MyToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <!-- Text color of Toolbar Title -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- Color of Overflow Menu ( 3 dots icon ) and color of Navigation Drawer Icon-->
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:padding">@dimen/_3sdp</item>
    </style>

    <!-- Parent Styles -->
    <style name="wrap_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--small edit text style-->
    <style name="edit_text_style">
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_margin">@dimen/_6sdp</item>
        <item name="android:inputType">number</item>
        <item name="android:background">@drawable/edit_text_shape</item>
    </style>

    <style name="SpinnerTheme" parent="android:Widget.Spinner">
        <item name="android:background">@drawable/ic_drop_arrow</item>
    </style>
    <style name="primary_button_small">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingRight">@dimen/_20sdp</item>
        <item name="android:paddingLeft">@dimen/_20sdp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Widget.TabWidget</item>
    </style>

    <style name="text_style">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pin_edittext_style">
        <item name="android:gravity">center</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:maxLength">1</item>
        <item name="android:minEms">2</item>
        <item name="android:inputType">number</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="create_text_style">
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="email_edit_text_style">
        <item name="android:paddingLeft">@dimen/_5sdp</item>
        <item name="android:paddingRight">@dimen/_5sdp</item>
        <item name="android:textColor">@color/text_color_black</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColorHint">@color/light_gray</item>
        <item name="android:background">@drawable/gray_button_rectangle</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyProgressBarGreen" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorControlHighlight">@color/light_green</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="android:progressDrawable">@drawable/progress_shape</item>
        <item name="android:minWidth">@dimen/_200sdp</item>
        <item name="android:minHeight">@dimen/_16sdp</item>
    </style>
    <style name="MyProgressBarBlue" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="colorControlHighlight">@color/light_blue</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="android:progressDrawable">@drawable/progress_shape</item>
        <item name="android:minWidth">@dimen/_200sdp</item>
        <item name="android:minHeight">@dimen/_16sdp</item>
    </style>
    <style name="MyProgressBarOrange" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <!--<item name="colorButtonNormal">#f50057</item>-->
        <item name="colorControlHighlight">@color/light_pink</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:progressDrawable">@drawable/progress_shape</item>
        <item name="android:minWidth">@dimen/_200sdp</item>
        <item name="android:minHeight">@dimen/_16sdp</item>
    </style>

</resources>