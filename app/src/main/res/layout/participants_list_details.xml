<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_bg2"

    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_20sdp"
        android:paddingTop="@dimen/_20sdp">

        <com.namakoti.components.CircularNetworkImageView
            android:id="@+id/userProfileIV"
            style="@style/wrap_wrap"
            android:layout_width="@dimen/_65sdp"
            android:layout_height="@dimen/_65sdp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_3sdp"
            android:src="@drawable/ic_defaultprofile"
            android:visibility="visible" />

        <TextView
            android:id="@+id/nameTV"
            style="@style/text_style"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/cityTV"
            style="@style/text_style"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/attendingButton"
            style="@style/text_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_25sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:text="@string/attending"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@android:color/white"
        android:padding="@dimen/_10sdp"
        android:orientation="vertical">

        <RelativeLayout
            style="@style/match_wrap"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:visibility="visible">

            <TextView
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_toLeftOf="@+id/totalChantRequestedTV"
                android:text="@string/total_chant_requested"
                android:textColor="@color/chant_gray" />

            <TextView
                android:id="@+id/totalChantRequestedTV"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>
        <include layout="@layout/separator"/>
        <RelativeLayout
            style="@style/match_wrap"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:visibility="visible">

            <TextView
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_toLeftOf="@+id/totalChantCompleteTV"
                android:text="@string/total_chants_completed"
                android:textColor="@color/chant_gray" />

            <TextView
                android:id="@+id/totalChantCompleteTV"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>
        <include layout="@layout/separator"/>
        <RelativeLayout
            style="@style/match_wrap"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_toLeftOf="@+id/noOfChantsLeftTV"
                android:text="@string/no_of_chats_left"
                android:textColor="@color/chant_gray" />

            <TextView
                android:id="@+id/noOfChantsLeftTV"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>
        <include layout="@layout/separator"/>
        <RelativeLayout
            android:id="@+id/imagesLL"
            style="@style/match_wrap"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/participantNameTV"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_8sdp"
                android:layout_toLeftOf="@+id/daysLeftTV"
                android:text="@string/days_left"
                android:textColor="@color/chant_gray" />

            <TextView
                android:id="@+id/daysLeftTV"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/colorPrimary" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottomRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancelRemainder"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/white_button_outer_orange_bg"
                android:text="@string/cancel_request"
                android:paddingRight="@dimen/_15sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_12sdp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/sendRemainder"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_background"
                android:text="@string/send_remainder"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>