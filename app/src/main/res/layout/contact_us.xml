<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:id="@+id/contact_us_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/contact_us_expand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:contentDescription="collapse"
            android:gravity="center"
            android:padding="@dimen/margin_top_bottem_spinners_in_adapter"
            android:text="+"
            android:textColor="@color/orange"
            android:textSize="@dimen/textSize_for_et_enternama" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_top_bottem_spinners_in_adapter"
            android:text="@string/contact_us"
            android:textColor="@color/orange"
            android:textSize="@dimen/textSize_for_et_enternama" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contact_us_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_top_bottem_spinners_in_adapter"
            android:textColor="@color/orange" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.94"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_top_bottem_spinners_in_adapter"
                android:text="@string/contact_us"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_for_et_enternama"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="@string/contact_us_text"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_for_et_enternama" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/margin_top_bottem_spinners_in_adapter"
                android:text="@string/contact_us_text_2"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_for_et_enternama" />

            <TextView
                android:id="@+id/namakoti_hiperlink3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/namakoti_hiperlink"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_for_et_enternama" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="E-mail: "
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_for_et_enternama" />

                <TextView
                    android:id="@+id/email_hiperlink3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="@string/email_hiperlink"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_for_et_enternama" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>