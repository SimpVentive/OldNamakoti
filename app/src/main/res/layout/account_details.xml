<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:id="@+id/account_settings_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/account_settings_expand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:contentDescription="collapse"
            android:gravity="center"
            android:padding="@dimen/margin_top_bottem_spinners_in_adapter"
            android:text="+"
            android:textColor="@color/orange" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_top_bottem_spinners_in_adapter"
            android:text="@string/account_settings_help"
            android:textColor="@color/orange" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/account_settings_help_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_top_bottem_spinners_in_adapter"
            android:textColor="@color/orange" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.94"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/account_details_text"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_for_et_enternama" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>