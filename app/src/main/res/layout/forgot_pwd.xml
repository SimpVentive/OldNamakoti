                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:src="@drawable/pwd_img" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.06" />

                <EditText
                    android:id="@+id/new_pwd"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.76"
                    android:background="@android:color/transparent"
                    android:hint="@string/new_password"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textSize="@dimen/textSize_for_sing_up" />
            </LinearLayout>























            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0.045"
                android:background="@color/white"
                android:orientation="horizontal"
                android:weightSum="1" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/margin_of_icons"
                    android:layout_weight="0.16"
                    android:background="@color/app_color"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:src="@drawable/pwd_img" />
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.06" />

                <EditText
                    android:id="@+id/con_password_edit"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.77"
                    android:background="@android:color/transparent"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    android:textColor="#000000"
                    android:textSize="@dimen/textSize_for_sing_up" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0.03"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_weight="0.003" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.08"
                    android:gravity="bottom"
                    android:text="@string/country_profile"
                    android:textColor="@color/profile_new_color_text"
                    android:textSize="@dimen/textSize_for_sing_in" />
            </LinearLayout>

            <Button
                android:id="@+id/country_signup"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0.045"
                android:background="@drawable/selector_view_profile"
                android:gravity="left|center_vertical"
                android:paddingLeft="@dimen/padding_left_right_of_view_profile"
                android:paddingRight="@dimen/padding_left_right_of_view_profile"
                android:text="@string/please_select_ur_country"
                android:textColor="@color/black_country"
                android:textSize="@dimen/textsize_profile" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0.03"
                android:orientation="horizontal" >

                <View
                    android:layout_width="0dp"
                    android:layout_height="6dp"
                    android:layout_weight="0.003" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.08"
                    android:gravity="bottom"
                    android:text="@string/mobile_profile"
                    android:textColor="@color/profile_new_color_text"
                    android:textSize="@dimen/textSize_for_sing_in" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_weight="0.045"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/country_code"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:background="@color/white"
                    android:gravity="center"
                    android:inputType="phone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_profile" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.01" />

                <EditText
                    android:id="@+id/mobile_profile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    android:background="@color/white"
                    android:hint="Mobile"
                    android:inputType="number"
                    android:paddingLeft="6dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_profile" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.02" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.08"
        android:orientation="horizontal"
        android:weightSum="1" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:background="@drawable/rounded_corners_4_main"
            android:orientation="horizontal"
            android:weightSum="1" >

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_4_signin"
                android:background="@drawable/selector_4_buttons"
                android:gravity="center"
                android:text="@string/submit"
                android:textColor="@drawable/common_txt_selector"
                android:textSize="@dimen/textSize_for_sing_in" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35" />
    </LinearLayout>

    <!--
         <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.2" />












