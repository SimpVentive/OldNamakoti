<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/match_match"
    android:background="@drawable/login_bg2"
    android:orientation="vertical">

    <include
        android:id="@id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:id="@+id/chantCountLL"
        style="@style/match_wrap"
        android:layout_below="@+id/toolbar"
        android:background="@android:color/white"
        android:orientation="vertical">

        <include
            android:id="@+id/includeDescription"
            layout="@layout/include_chant_description"
            android:visibility="gone" />

        <LinearLayout
            style="@style/match_wrap"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/god_circle_bg">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/god_image"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/shiv_god" />

                <!--<ImageView
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:id="@+id/god_image"
                    android:layout_centerInParent="true"
                    android:layout_centerHorizontal="true"/>-->

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/selectLL"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_43sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_toLeftOf="@+id/volumeIv"
                    android:background="@drawable/spinner_background"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/godNameTv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_2sdp"
                        android:gravity="center_vertical|left"
                        android:paddingEnd="@dimen/_5sdp"
                        android:text="@string/select"
                        android:textColor="@color/colorPrimary" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/volumeIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:background="@drawable/chanting_novolume_ic" />

                <TextView
                    android:id="@+id/totalChantTextTv"
                    style="@style/text_style"
                    android:layout_below="@+id/selectLL"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingStart="@dimen/_2sdp"
                    android:text="@string/total_chan_chanted" />

                <TextView
                    android:id="@+id/totalNumberOfChantsTV"
                    style="@style/text_style"
                    android:layout_below="@+id/totalChantTextTv"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingStart="@dimen/_2sdp"
                    android:text=""
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/totalChantProgressRL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="gone">

            <TextView
                android:id="@+id/firstProgressPintTitleTv"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Chants" />

            <ProgressBar
                android:id="@+id/chantProgressBar"
                style="@style/MyProgressBarOrange"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/firstProgressPintTitleTv"
                android:layout_marginTop="@dimen/_3sdp"
                android:progress="0"
                android:secondaryProgress="0"
                android:theme="@style/MyProgressBarOrange"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/chantRunningCountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/chantProgressBar"
                android:layout_alignBottom="@+id/chantProgressBar"
                android:paddingLeft="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:gravity="center"

                android:textColor="@android:color/white"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/chantTotalCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/chantProgressBar"
                android:layout_alignBottom="@+id/chantProgressBar"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:gravity="center"

                android:textColor="@color/chant_gray"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/chantPrintedTv"
                style="@style/text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="My Chants" />

            <ProgressBar
                android:id="@+id/printProgressBar"
                style="@style/MyProgressBarGreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chantPrintedTv"
                android:layout_marginTop="@dimen/_3sdp"
                android:progress="0"
                android:secondaryProgress="0"
                android:theme="@style/MyProgressBarGreen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/printRunningCountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignTop="@+id/printProgressBar"
                android:layout_alignBottom="@+id/printProgressBar"
                android:paddingStart="@dimen/_5sdp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:gravity="center"

                android:textColor="@android:color/white"
                android:textSize="@dimen/_10sdp" />

            <TextView
                android:id="@+id/printTotalCountTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/printProgressBar"
                android:layout_alignBottom="@+id/printProgressBar"
                android:paddingEnd="@dimen/_5sdp"
                android:paddingStart="@dimen/_2sdp"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:gravity="center"

                android:textColor="@color/chant_gray"
                android:textSize="@dimen/_10sdp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:orientation="horizontal">

            <include
                android:id="@+id/includeChantImage"
                layout="@layout/include_chant_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <include
                android:id="@+id/includePrintImage"
                layout="@layout/include_chant_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <include
                android:id="@+id/includePanchangImage"
                layout="@layout/include_chant_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <include
                android:id="@+id/includeServicesImage"
                layout="@layout/include_chant_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <include
                android:id="@+id/includeTopListImage"
                layout="@layout/include_chant_image"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/chantCountLL"
        android:orientation="vertical">

        <include
            android:id="@+id/includeDragLayout"
            layout="@layout/include_chants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <include
            android:id="@+id/includePrintLayout"
            layout="@layout/include_print"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <include
            android:id="@+id/includePanchangLayout"
            layout="@layout/include_panchang"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <include
            android:id="@+id/includeServiceLayout"
            layout="@layout/include_service"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/topListFragment"
            android:name="com.namakoti.karmic.TopListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"></FrameLayout>

    </LinearLayout>
</RelativeLayout>
