<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_left_right_enter_nama_main"
    android:layout_marginRight="@dimen/margin_left_right_enter_nama_main"
    android:orientation="vertical"
    android:weightSum="1" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:text="@string/start_chanting"
        android:textColor="@color/profile_new_color_text" />

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_of_views_save_nama"
        android:layout_weight="0.2"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1" >

        <Spinner
            android:id="@+id/gods_spinner"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_of_spinner_in_profile"
            android:layout_weight="0.77"
            android:background="@drawable/select_img"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_left_right_of_view_profile"
            android:paddingRight="@dimen/padding_left_right_of_view_profile" />

        <ImageView
            android:id="@+id/god_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.23" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:background="@drawable/rounded_corners_4_status"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/paddingLeft_for_enternama"
            android:text="@string/countstaus"
            android:textColor="#ffffff"
            android:textSize="@dimen/textSize_4_enternama"
            android:textStyle="bold|italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/app_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#50FFFFFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:orientation="vertical"
                android:weightSum="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.2"
                        android:contentDescription="@string/empty_description"
                        android:src="@drawable/book_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/counttotal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_for_et_enternama" />

                    <ImageView
                        android:id="@+id/total_help"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="0.2"
                        android:src="@drawable/help_icon_img" />
                </LinearLayout>

                <TextView
                    android:id="@+id/total_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:hint="@string/counttotal"
                    android:textColor="@color/text_color_for_count"
                    android:textSize="@dimen/textSize_for_et_enternama" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/app_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:orientation="vertical"
                android:weightSum="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.2"
                        android:src="@drawable/print_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/counttotal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_for_et_enternama" />

                    <ImageView
                        android:id="@+id/print_help"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="0.2"
                        android:contentDescription="@string/empty_description"
                        android:src="@drawable/help_icon_img" />
                </LinearLayout>

                <TextView
                    android:id="@+id/printed_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:hint="@string/counttotal"
                    android:textColor="@color/text_color_for_count"
                    android:textSize="@dimen/textSize_for_et_enternama" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/app_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.33"
                android:orientation="vertical"
                android:weightSum="1" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:layout_weight="0.2"
                        android:contentDescription="@string/empty_description"
                        android:src="@drawable/writing_img" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/counttotal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textSize_for_et_enternama" />

                    <ImageView
                        android:id="@+id/running_help"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="0.2"
                        android:contentDescription="@string/empty_description"
                        android:src="@drawable/help_icon_img" />
                </LinearLayout>

                <TextView
                    android:id="@+id/running_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:hint="@string/counttotal"
                    android:textColor="@color/text_color_for_count"
                    android:textSize="@dimen/textSize_for_et_enternama" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight="0.2"
        android:background="@drawable/rounded_corners_4_status"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:weightSum="1.0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:id="@+id/chatting_options"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/paddingLeft_for_enternama"
                android:text="@string/chatting_options"
                android:textColor="#ffffff"
                android:textSize="@dimen/textSize_4_enternama"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/voice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                android:layout_weight="0.3"
                android:contentDescription="@string/on_voice"
                android:src="@drawable/voice_on" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/app_color" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:background="#50FFFFFF"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <RadioButton
                android:id="@+id/drag_and_drop_rb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:checked="true"
                android:text="Write"
                android:textSize="@dimen/textSize_4_radio_enternama" />

            <RadioButton
                android:id="@+id/key_touch_rb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:text="Key Touch"
                android:textSize="@dimen/textSize_4_radio_enternama" />

            <RadioButton
                android:id="@+id/japa_mala_rb"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:text="Japa Mala"
                android:textSize="@dimen/textSize_4_radio_enternama" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/toplinear"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.43"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:visibility="visible" >

        <include
            android:id="@+id/drag_and_drop_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/drag_and_drop_layout"
            android:visibility="visible" />

        <include
            android:id="@+id/key_touch_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/key_touch_layout"
            android:visibility="invisible" />

        <include
            android:id="@+id/japa_mala_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/japa_mala_layout"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.02" />

</LinearLayout>