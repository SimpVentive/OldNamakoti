<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/match_match"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/dialog_gray"
    android:minHeight="@dimen/radio_dialog_height"
    android:minWidth="@dimen/radio_dialog_height">
    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    <ScrollView
        android:layout_above="@+id/doneLL"
        android:layout_below="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        style="@style/match_match"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/requestRg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:gravity="left"
            android:orientation="vertical"
            android:weightSum="4">

            <RadioButton
                android:id="@+id/acceptRb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:checked="true"
                android:text="@string/i_accept"
                android:textColor="@color/chant_gray"
                android:textSize="@dimen/_11sdp" />

            <RadioButton
                android:id="@+id/doChantRb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="@string/i_would_do_chant"
                android:textColor="@color/chant_gray"
                android:textSize="@dimen/_11sdp" />
            <LinearLayout
                android:id="@+id/countLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_28sdp"
                android:layout_marginRight="@dimen/_15sdp"
                android:orientation="horizontal"
                android:weightSum="1"
                android:visibility="gone">
                <EditText
                    style="@style/email_edit_text_style"
                    android:id="@+id/countEtv"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/gray_button_round"
                    android:inputType="number"
                    android:hint="@string/count"/>
                <TextView
                    style="@style/text_style"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_height="wrap_content"
                    android:text="@string/times"/>

            </LinearLayout>

            <RadioButton
                android:id="@+id/notAbleToHelpRb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="@string/sorry_i_will_not"
                android:textColor="@color/chant_gray"
                android:textSize="@dimen/_11sdp" />
            <RadioButton
                android:id="@+id/knowOfRb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:text="@string/sorry_i_know_of"
                android:textColor="@color/chant_gray"
                android:textSize="@dimen/_11sdp" />
            <LinearLayout
                android:id="@+id/parentEmailLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="vertical"
                android:visibility="gone">
                <include layout="@layout/add_phone_layout"
                    android:id="@+id/includeEmailLL"/>
            </LinearLayout>

        </RadioGroup>

    </LinearLayout>
</ScrollView>
    <LinearLayout
        android:id="@+id/doneLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/doneTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:text="@string/done"
            android:textSize="@dimen/_14sdp"
            android:textAllCaps="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textColor="@color/cancel_text_color" />
        <TextView
            android:id="@+id/cancelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="@string/cancel"
            android:textSize="@dimen/_14sdp"
            android:textAllCaps="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textColor="@color/cancel_text_color" />
    </LinearLayout>
</RelativeLayout>