<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:id="@+id/instructions_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/orange_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/instructions_expand"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:contentDescription="collapse"
            android:gravity="center"
            android:padding="@dimen/margin_top_bottem_spinners_in_adapter"
            android:text="+"
            android:textColor="@color/orange"
            android:textSize="@dimen/textSize_for_et_enternama" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_top_bottem_spinners_in_adapter"
            android:text="@string/instructions_on_how"
            android:textColor="@color/orange"
            android:textSize="@dimen/textSize_for_et_enternama" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/instructions_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.06"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_top_bottem_spinners_in_adapter"
            android:textColor="@color/orange" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.94"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_top_bottem_spinners_in_adapter"
                android:text="@string/instructions_how_to_write_texxt"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_for_et_enternama" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="•"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_for_et_enternama" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="Preferably start the Chanting process, after taking your bath"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_for_et_enternama" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="•"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_for_et_enternama" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="Do not write or Chant the name, when doing activities such as eating, attending natures call and other similar activities"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_for_et_enternama" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="•"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_for_et_enternama" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="Please focus on the God when writing/chanting his name.  Technology is being used as a tool to help you which hitherto made the whole process cumbersome, bit that does not however mean you give up the basic tenants of the processes."
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_for_et_enternama" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:text="•"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_for_et_enternama" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:text="Remember that Chanting a God\&apos;s name is the most important way of reaching to the Supreme Being and that it should be done with Devotion and Dedication showing the highest of respect and sincerity in the process.  "
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_for_et_enternama" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>