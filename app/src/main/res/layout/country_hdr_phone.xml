<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hdrTop"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bar"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="1.0" >

    <!--
         <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:visibility="visible" />
    -->

    <ImageView
        android:id="@+id/back"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_top_bottem_4_back_btn"
        android:layout_marginLeft="@dimen/margin_right_left_4_back_btn"
        android:layout_marginRight="@dimen/margin_right_left_4_back_btn"
        android:layout_marginTop="@dimen/margin_top_bottem_4_back_btn"
        android:layout_weight="0.15"
        android:src="@drawable/selector_4_back"
        android:visibility="visible" />

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_top_of_login"
        android:layout_marginTop="@dimen/margin_top_of_login"
        android:layout_weight="0.7"
        android:gravity="center"
        android:text="Please select the country"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize_for_et_enternama"
        android:textStyle="bold"
        android:visibility="visible" />

    <!--
         <TextView
        android:id="@+id/mainTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_weight="0.1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textSize="22sp"
        android:visibility="gone" />
    -->

    <ImageView
        android:id="@+id/right_image_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_top_bottem_4_back_btn"
        android:layout_marginLeft="@dimen/margin_right_left_4_back_btn"
        android:layout_marginRight="@dimen/margin_right_left_4_back_btn"
        android:layout_marginTop="@dimen/margin_top_bottem_4_back_btn"
        android:layout_weight="0.15"
        android:src="@drawable/edit"
        android:textColor="@color/white"
        android:visibility="invisible" />

    <!--
         <View
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:visibility="visible" />
    -->

</LinearLayout>