<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout style="@style/match_match"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/dialog_gray"
    android:minHeight="@dimen/radio_dialog_height"
    android:minWidth="@dimen/radio_dialog_height">
    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>
    <ScrollView
        android:layout_above="@+id/doneLL"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/parentEmailLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="vertical"
            android:visibility="visible">
            <include layout="@layout/add_phone_layout"
                android:id="@+id/includeEmailLL"/>
        </LinearLayout>
</ScrollView>
    <LinearLayout
        android:id="@+id/doneLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_gravity="right">

        <TextView
            android:id="@+id/doneTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:text="@string/done"
            android:textSize="@dimen/_14sdp"
            android:textAllCaps="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textColor="@color/cancel_text_color" />
        <TextView
            android:id="@+id/cancelTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="@dimen/_10sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingBottom="@dimen/_3sdp"
            android:text="@string/cancel"
            android:textSize="@dimen/_14sdp"
            android:textAllCaps="true"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textColor="@color/cancel_text_color" />
    </LinearLayout>
</RelativeLayout>