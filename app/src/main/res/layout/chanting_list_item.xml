<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_wrap"
    android:paddingBottom="@dimen/_5sdp"
    android:paddingLeft="@dimen/_5sdp"
    android:paddingRight="@dimen/_5sdp"
    android:paddingTop="@dimen/_5sdp">

    <androidx.cardview.widget.CardView style="@style/match_match">

        <LinearLayout
            android:id="@+id/list_item_parent_nc"
            style="@style/match_wrap"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout style="@style/wrap_wrap">
                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/nc_god_image"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:src="@drawable/ic_defaultprofile"
                    android:scaleType="fitXY"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true" />
                <!--<ImageView
                    android:id="@+id/nc_god_image"
                    style="@style/wrap_wrap"
                    android:src="@drawable/lord_shiva_small" />-->
            </LinearLayout>

            <!--<LinearLayout
                style="@style/match_wrap"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp">-->


                <RelativeLayout
                    style="@style/wrap_wrap"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp">
                    <TextView
                        android:id="@+id/nc_god_name"
                        style="@style/wrap_wrap"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:text="God Name"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        style="@style/wrap_wrap"
                        android:layout_below="@+id/nc_god_name"
                        android:layout_alignParentLeft="true"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/wrap_wrap"
                            android:paddingRight="@dimen/_1sdp"
                            android:text="Target : "
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/nc_target_count"
                            style="@style/wrap_wrap"
                            android:paddingRight="@dimen/_3sdp"
                            android:text=""
                            android:textSize="@dimen/_10sdp" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="@dimen/_12sdp"
                            android:background="@android:color/darker_gray" />

                        <TextView
                            style="@style/wrap_wrap"
                            android:paddingLeft="@dimen/_3sdp"
                            android:paddingRight="@dimen/_1sdp"
                            android:text="Ongoing : "
                            android:textSize="@dimen/_10sdp" />

                        <TextView
                            android:id="@+id/nc_on_going_count"
                            style="@style/wrap_wrap"
                            android:text=""
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:textSize="@dimen/_10sdp" />

                    </LinearLayout>


                </RelativeLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_3sdp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_rightarrow_orange" />

                <TextView
                    android:id="@+id/nc_date"
                    style="@style/wrap_wrap"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:text="Nov12,2017"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="gone"/>
            </LinearLayout>

        <!--</LinearLayout>-->
    </androidx.cardview.widget.CardView>


</LinearLayout>