<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.16"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1" >

        <Button
            android:id="@+id/gods_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/height_of_spinner_in_profile_ls"
            android:layout_weight="0.77"
            android:background="@drawable/select_img"
            android:gravity="left|center_vertical"
            android:paddingTop="@dimen/padding_left_right_of_view_profile"
            android:paddingBottom="@dimen/padding_left_right_of_view_profile"
            android:paddingStart="@dimen/padding_left_right_of_view_profile"
            android:paddingEnd="@dimen/height_of_save_nama_god"
            android:text="@string/app_name"
            android:textSize="@dimen/textSize_for_et_enternama"
            tools:ignore="NestedWeights" />

        <ImageView
            android:id="@+id/god_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.23"
            android:contentDescription="@string/empty_description" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="0.01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="5dp"
        android:layout_weight="0.84"
        android:orientation="horizontal"
        android:weightSum="1" >

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.94"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:id="@+id/no_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#90FFFFFF"
                android:gravity="center"
                android:padding="4dp"
                android:text="No payment details"
                android:textColor="@color/black"
                android:textSize="@dimen/textSize_for_et_enternama"
                android:visibility="gone" />

            <ListView
                android:id="@+id/payment_and_delivery_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </ListView>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03" />
    </LinearLayout>

</LinearLayout>