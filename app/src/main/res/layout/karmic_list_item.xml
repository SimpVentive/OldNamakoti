<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_wrap"
    android:orientation="vertical"
    android:padding="@dimen/_8sdp">

    <TextView
        android:id="@+id/dateTv"
        style="@style/wrap_wrap"
        android:layout_below="@+id/godNameTv"
        android:layout_marginBottom="@dimen/_3sdp"
        android:text="Date"
        android:textColor="@color/text_color_black"
        android:textSize="@dimen/_12sdp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/selfCardView"
        style="@style/match_wrap">

        <LinearLayout
            style="@style/match_wrap"
            android:orientation="vertical"
            android:padding="@dimen/_8sdp">

        <LinearLayout
            android:id="@+id/descriptionLL"
            style="@style/match_wrap"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/godNameRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginBottom="@dimen/_15sdp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/godNameTv"
                    style="@style/wrap_wrap"
                    android:text="God Name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/godCountTv"
                    style="@style/wrap_wrap"
                    android:layout_alignParentRight="true"
                    android:layout_toLeftOf="@+id/godNameTv"
                    android:text=""
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp" />


            </RelativeLayout>
            <TextView
                android:id="@+id/descriptionTv"
                style="@style/match_wrap"
                android:layout_below="@+id/godNameRL"
                android:text="God Name"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/_15sdp"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/_12sdp" />

        </LinearLayout>
            <RelativeLayout
                android:id="@+id/participantRL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/descriptionTv"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout
                    style="@style/match_wrap"
                    android:layout_toLeftOf="@+id/rightArrowIV"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <com.namakoti.components.CircularNetworkImageView
                        android:id="@+id/person1Iv"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:src="@drawable/ic_profile_pic"
                        android:scaleType="fitXY" />

                    <com.namakoti.components.CircularNetworkImageView
                        android:id="@+id/person2Iv"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/ic_profile_pic"
                        android:minHeight="@dimen/_38sdp"
                        android:scaleType="fitXY"
                        android:visibility="visible" />

                    <com.namakoti.components.CircularNetworkImageView
                        android:id="@+id/person3Iv"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/ic_profile_pic"
                        android:scaleType="fitXY"
                        android:visibility="visible" />

                    <com.namakoti.components.CircularNetworkImageView
                        android:id="@+id/person4Iv"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/ic_profile_pic"
                        android:scaleType="fitXY"
                        android:visibility="visible" />

                    <com.namakoti.components.CircularNetworkImageView
                        android:id="@+id/person5Iv"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_38sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:src="@drawable/ic_profile_pic"
                        android:scaleType="fitXY"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/addCountIv"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="@color/chant_gray"
                        android:textSize="@dimen/_14sdp"
                        android:visibility="visible" />

                </LinearLayout>

                <com.namakoti.components.CircularNetworkImageView
                    android:id="@+id/rightArrowIV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:src="@drawable/ic_rightarrow_grey"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_3sdp"
                    android:paddingRight="@dimen/_3sdp"
                    android:paddingTop="@dimen/_5sdp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/acceptLL"
                style="@style/match_wrap"
                android:layout_below="@+id/imagesLL"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2">

                <Button
                    android:id="@+id/declineBtn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/white_button_outer_orange_bg"
                    android:text="@string/decline"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/acceptBtn"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:background="@drawable/orange_button_bg"
                    android:text="@string/accept"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>