<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/match_wrap"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/_10sdp">

    <RelativeLayout
        android:id="@+id/bgRL"
        style="@style/match_wrap"
        android:background="@drawable/bg_white">

        <RelativeLayout
            android:id="@+id/bgGodRL"
            style="@style/wrap_wrap"
            android:layout_centerInParent="true"
            android:background="@drawable/selectgod">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/grid_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/ic_defaultprofile" />

        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/grid_text"
        style="@style/match_wrap"
        android:layout_below="@+id/bgRL"
        android:layout_centerInParent="true"
        android:layout_marginTop="-7dp"
        android:background="@drawable/unselect_bg_text"
        android:text="@string/lord_shiva"
        android:gravity="center"
        android:textAlignment="center" />

</RelativeLayout>