<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hdrTop"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bar"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/selector_4_back"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/margin_top_of_login"
        android:layout_marginTop="@dimen/margin_top_of_login"
        android:layout_toLeftOf="@+id/right_image_view"
        android:layout_toRightOf="@+id/back"
        android:contentDescription="@string/empty_description"
        android:src="@drawable/sign_in_hdr"
        android:visibility="visible" />

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="4dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_name"
        android:textSize="22sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/right_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="2dp"
        android:padding="4dp"
        android:scaleType="fitEnd"
        android:src="@drawable/edit"
        android:textColor="@color/white"
        android:visibility="invisible" />

</RelativeLayout>