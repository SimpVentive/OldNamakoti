<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <corners android:radius="2dp" />

            <solid android:color="#1674D3" />
        </shape>
    </item>
    <item android:bottom="2dp">
        <shape
            android:dither="true"
            android:shape="rectangle" >
            <gradient
                android:angle="180"
                android:endColor="#1674D3"
                android:startColor="#1674D3" />

            <corners android:radius="2dp" />

            <solid android:color="#1674D3" />

            <padding
                android:bottom="3dp"
                android:left="3dp"
                android:right="4dp"
                android:top="3dp" />
        </shape>
    </item>

</layer-list>